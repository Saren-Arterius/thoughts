<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/thought_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="0.25"
            android:text="#1000"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/thought_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thought_id"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Lorem ipsum"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/thought_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thought_title"
            android:layout_marginTop="4dp"
            android:alpha="0.5"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam ultricies pharetra elit a tempor. Nullam orci urna, convallis a porta in, sodales eget odio. Sed imperdiet lorem nec bibendum auctor. Quisque dolor tellus, fermentum id auctor faucibus, tincidunt vel ipsum. Morbi et auctor justo, non dictum risus. Vestibulum vitae neque non dolor ullamcorper ultrices a a urna. Nulla vitae lorem tempor arcu consequat lobortis."
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/thought_hashtags"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thought_content"
            android:alpha="0.25"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="#Lorem #ipsum #dolor #sit #amet #Lorem #ipsum #dolor #sit #amet"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/thought_hashtags"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/thought_rating_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_whatshot_black_24dp" />

            <TextView
                android:id="@+id/thought_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:alpha="0.5"
                android:layout_toEndOf="@+id/thought_rating_icon"
                android:layout_toRightOf="@+id/thought_rating_icon"
                android:text="+500"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />


            <ImageView
                android:id="@+id/thought_post_date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_marginStart="80dp"
                android:src="@drawable/ic_history_black_24dp" />

            <TextView
                android:id="@+id/thought_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:alpha="0.5"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/thought_post_date_icon"
                android:layout_toRightOf="@+id/thought_post_date_icon"
                android:text="1d"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@android:color/black" />

        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>